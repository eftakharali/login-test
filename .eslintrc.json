{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2,
            {"VariableDeclarator": {"var":2, "let":2, "const":3 }}
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-undef": 1,
        "no-unused-vars": 1,
	"no-console": ["error", { "allow": ["log", "warn", "error"]}] 
    }
}